<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <EditText
        android:id="@+id/newTaskText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@null"
        android:hint="Neuer Task"
        android:inputType="text"
        android:minHeight="48dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/newTaskFullText"
        android:layout_width="367dp"
        android:layout_height="218dp"
        android:background="@null"
        android:hint="Beschreibung des Tasks"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorHint="#546E7A"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="72dp"
        tools:ignore="MissingConstraints" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Für alle zugänglich"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="293dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/detailsGenerated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ersteller"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="347dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/detailsModified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Zuletzt verändert von XY am xy"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="401dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/newTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Speichern"
        android:textAllCaps="false"
        android:textColor="#546E7A"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="462dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>